---
const COLECCIONES = [
  {
    nombre: 'BOX LAMP',
    imagen: '/colecciones/boxlamp.svg',
  },
  {
    nombre: 'ENSAMBLE',
    imagen: '/colecciones/ensamble.svg',
  },
  {
    nombre: 'BANCOS',
    imagen: '/colecciones/banco.svg',
  },
];
---

<section id="Colecciones">
  <div class="w-full px-16 justify-items-center">
    <!-- Titulo -->
    <h1 class="text-primary font-semibold text-6xl mb-12">COLECCIONES</h1>

    <!-- Colecciones -->
    <div class="flex flex-row w-full gap-16 text-black">
      {
        COLECCIONES.map((coleccion) => (
          <div class="border-3 border-primary rounded-4xl justify-items-center flex-1/3">
            <p class="text-4xl mt-12 mb-2">COLECCION</p>
            <p class="text-primary font-semibold text-5xl">
              {coleccion.nombre}
            </p>
            <div class="h-64 content-end my-8">
              <img src={coleccion.imagen} alt={coleccion.nombre} />
            </div>
            <p class="text-2xl mb-12">INFORMACIÃ“N</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
