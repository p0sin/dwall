---
const COLECCIONES = [
  {
    nombre: 'BOX LAMP',
    imagen: '/colecciones/boxlamp.svg',
  },
  {
    nombre: 'ENSAMBLE',
    imagen: '/colecciones/ensamble.svg',
  },
  {
    nombre: 'BANCOS',
    imagen: '/colecciones/banco.svg',
  },
];
---

<section id="Colecciones">
  <div class="max-w-screen-xl mx-auto justify-items-center px-4 md:px-8">
    <!-- Titulo -->
    <h1 class="text-primary font-semibold text-3xl md:text-6xl mb-8 md:mb-12">
      COLECCIONES
    </h1>

    <!-- Colecciones -->
    <div class="flex flex-col md:flex-row w-full gap-8 md:gap-16 text-black">
      {
        COLECCIONES.map((coleccion) => (
          <div class="border-3 border-primary rounded-4xl flex-1 basis-full md:basis-1/3 justify-items-center">
            <p class="text-2xl md:text-4xl mt-8 md:mt-12 mb-2">COLECCION</p>
            <p class="text-primary font-semibold text-3xl md:text-5xl">
              {coleccion.nombre}
            </p>
            <div class="h-40 md:h-64 content-end my-8 md:my-12 flex items-end justify-center">
              <img
                src={coleccion.imagen}
                alt={coleccion.nombre}
                class="max-w-full max-h-full w-auto h-auto object-contain"
              />
            </div>
            <p class="text-lg md:text-2xl mb-8 md:mb-12">INFORMACIÃ“N</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
