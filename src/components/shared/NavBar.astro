---

<div class="navbar sticky z-50 min-h-[4.5rem]">
  <!-- Altura mínima fija -->
  <div class="navbar-start h-full">
    <!-- Altura completa -->
    <!-- Logo (enlace a inicio) -->
    <a
      href="/"
      class="flex-shrink-0 h-full flex items-end"
      aria-label="Ir al inicio"
    >
      <img
        src="/dwallLogo.png"
        alt="Dwall - Diseño y Arquitectura"
        class="w-40 h-auto md:w-48 pb-1"
        width="190"
        height="40"
        loading="lazy"
      />
    </a>
  </div>
  <div class="navbar-end hidden md:flex h-full">
    <!-- Altura completa -->
    <ul class="menu menu-lg menu-horizontal px-1 gap-2 items-end h-full">
      <!-- Alineado al fondo -->
      <li>
        <a
          href="/"
          class="text-primary font-medium hover:text-primary/80 transition-colors pb-1"
          data-astro-prefetch="hover"
        >
          INICIO
        </a>
      </li>
      <li>
        <a
          href="/nosotros"
          class="text-black hover:text-primary transition-colors pb-1"
          data-astro-prefetch="hover"
        >
          NOSOTROS
        </a>
      </li>
      <li>
        <details>
          <summary
            class="text-black hover:text-primary transition-colors pb-1"
            data-astro-prefetch="hover"
          >
            COLECCIONES
          </summary>
          <ul class="p-2">
            <li class="text-black hover:text-primary"><a>BOX LAMP</a></li>
            <li class="text-black hover:text-primary"><a>ENSAMBLE</a></li>
            <li class="text-black hover:text-primary"><a>BANCO</a></li>
          </ul>
        </details>
      </li>
      <li class="flex items-end h-full">
        <!-- Contenedor especial para el botón -->
        <a
          href="/contacto"
          class="ml-4 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
        >
          CONTACTO
        </a>
      </li>
    </ul>
  </div>
  <!-- Menú móvil (se mantiene igual) -->
  <div class="navbar-end md:hidden">
    <div class="dropdown dropdown-bottom dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost p-2 text-primary">
        <svg class="w-6 h-6" fill="none" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-32 p-2 shadow space-y-3"
      >
        <!-- Ítems del menú móvil... -->
        <!-- Alineado al fondo -->
        <li class="flex items-center h-full">
          <a
            href="/"
            class="text-primary font-medium hover:text-primary/80 transition-colors pb-1"
            data-astro-prefetch="hover"
          >
            INICIO
          </a>
        </li>
        <li class="flex items-center h-full">
          <a
            href="/nosotros"
            class="text-black hover:text-primary transition-colors pb-1"
            data-astro-prefetch="hover"
          >
            NOSOTROS
          </a>
        </li>
        <li class="flex items-center h-full">
          <details>
            <summary
              class="text-black hover:text-primary transition-colors pb-1"
              data-astro-prefetch="hover"
            >
              COLECCIONES
            </summary>
            <ul class="p-2">
              <li class="text-black hover:text-primary"><a>BOX LAMP</a></li>
              <li class="text-black hover:text-primary"><a>ENSAMBLE</a></li>
              <li class="text-black hover:text-primary"><a>BANCO</a></li>
            </ul>
          </details>
        </li>
        <li class="flex items-center h-full">
          <!-- Contenedor especial para el botón -->
          <a
            href="/contacto"
            class="bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
          >
            CONTACTO
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
