---
const { title, description, image } = Astro.props;
---

<section id="hero" class="hero bg-primary">
  <div class="hero-content bg-primary flex-col md:flex-row">
    <img src={image} class="max-w-md rounded-lg" />
    <div class="flex flex-col gap-12">
      <h1 class="text-6xl text-black font-bold">{title}</h1>
      <p class="max-w-lg" set:html={description} />
    </div>
  </div>
</section>
