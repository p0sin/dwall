---
const { title, description, image } = Astro.props;
---

<section id="hero" class="hero bg-primary px-4 md:px-8 py-8 md:py-12">
  <div class="hero-content bg-primary flex-col md:flex-row gap-8 md:gap-12">
    <img
      src={image}
      class="max-w-full md:max-w-md rounded-lg w-auto h-auto object-contain"
    />
    <div class="flex flex-col gap-6 md:gap-12 text-center md:text-left">
      <h1 class="text-3xl md:text-5xl lg:text-6xl text-black font-bold">
        {title}
      </h1>
      <p
        class="max-w-lg text-sm md:text-base lg:text-lg"
        set:html={description}
      />
    </div>
  </div>
</section>
