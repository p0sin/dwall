---
const { info, gallery } = Astro.props;
---

<section id="hero-with-gallery" class="hero px-4 py-12 md:py-20">
  <div class="container mx-auto flex flex-col md:flex-row items-center gap-12">
    <!-- Descripción -->
    <div class="w-full md:w-1/2 flex flex-col gap-6">
      {
        info.map((paragraph: string) => (
          <p class="text-lg md:text-xl leading-relaxed max-w-prose text-black">
            {paragraph}
          </p>
        ))
      }
    </div>

    <!-- Galería -->
    <div class="w-full md:w-1/2">
      <swiper-container
        class="mySwiper w-full max-w-[600px] aspect-[3/2] bg-neutral-200 rounded-lg shadow overflow-hidden"
        pagination-clickable="true"
        pagination-dynamic-bullets="true"
      >
        {
          gallery.map((image: string, index: number) => (
            <swiper-slide key={index} class="flex items-center justify-center">
              <img
                src={image}
                alt={`Galería ${index + 1}`}
                class="w-full h-full object-cover"
                width="600"
                height="400"
              />
            </swiper-slide>
          ))
        }
      </swiper-container>
    </div>
  </div>
</section>
